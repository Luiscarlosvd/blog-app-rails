<h1 class="text-center">Create a Post</h1>

<%= form_with model: @post, url: user_posts_path, method: :post, scope: :post do |f| %>
    <div class="flex flex-col gap-4 items-center my-4">
        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :text %>
            <%= f.text_area :text %>
        </div>
        <%= f.submit "Create Post", class: "py-1 px-2 border-solid border-black border-2" %>
    </div>
<% end %>