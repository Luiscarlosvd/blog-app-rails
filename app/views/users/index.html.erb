<ul class="w-full">
  <% @users.each do |user| %>
    <li class="my-7 flex w-full">
      <div class="p-10 border-solid border-black border-2">
        <img src=<%= user.photo %> alt="User Photo">
      </div>
      <div class="border-solid border-black border-2 px-8 ml-4 my-1 w-full flex justify-between items-center">
        <h2 class="text-3xl font-bold"><%= user.name %></h2>
        <p class="self-end mb-2">Number of posts: <%= user.posts_counter%></p>
      </div>
    </li>
  <% end %>
</ul>